modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vue GPS App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auto Build"

[[workflows.workflow]]
name = "Vue GPS App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite"
waitForPort = 5000

[[workflows.workflow]]
name = "Auto Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite build && echo \"Build completed to dist at $(date)\""

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
publicDir = "dist"
